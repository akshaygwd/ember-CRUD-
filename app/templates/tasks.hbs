{{outlet}}
akshay
{{#each model.task as |task|}}
  <li><h2>{{#link-to 'tasks.edit' task.id}}{{task.title}}{{/link-to}}</h2>
  <small>Due: {{format-date task.date}}</small>
  <p>{{task.description}}</p></li>
  <h2>{{#link-to 'tasks.comment' task.id}}addComment{{/link-to}}</h2>
  {{#each task.comments as |c|}}
    <p>{{c.body}}</p>
    <button {{action 'removeComment' c.id}}>removeComment</button>
    <h2>{{#link-to 'tasks.commentupdate' task.id c.id}}updateComment{{/link-to}}</h2>
  {{else}}
    <p>no comment found</p>
  {{/each}}
  <button {{action 'deleteTask' task.id}}>Delete</button>
{{/each}}

<form>
  {{log model}}
  <div class="form-group">
    <label>title:</label>
    {{ model.title }}
  </div>
  <div class="form-group">
    <label>date:</label>
    {{ format-date model.date }}
  </div>
  <div class="form-group">
    <label>Description:</label>
    {{ model.description }}
  </div>
  <div class="form-group">
    <label>comment:</label>
    {{ textarea class="form-control" value = comment }}
  </div>
  <button {{ action 'addComment' model.id }} class="btn btn-primary">Submit</button>
</form>
